body {
  background-color: #F2F2F0 !important;
}
/*.famfamfam-flags {
    display: inline-block;
}*/
a {
  cursor: pointer;
}
/*仿制bootstrap 做的layui input-group*/
.layui-input-group {
  position: relative;
  display: table;
  border-collapse: separate;
}
.layui-input-group span {
  font-weight: 500;
  padding: 6px 12px;
  border: 1px solid #e6e6e6;
  line-height: 1;
  text-align: center;
  display: table-cell;
  background-color: #eee;
  cursor: pointer;
}
.layui-input-group input {
  width: 100%;
  line-height: 1;
  display: table-cell;
  padding: 0 10px;
  text-align: center;
  color: blue;
  font-weight: 800;
}
/*网站头部*/
.mall-header {
  position: fixed;
  left: 0;
  top: 0;
  z-index: 10000;
  width: 100%;
  height: 60px;
  border-bottom: 1px solid #393D49;
  border-right: 1px solid #393D49;
  border-radius: 0;
  background-color: #393D49;
}
.mall-header .layui-logo {
  line-height: 60px;
  font-size: 16px;
  width: 120px;
  height: 100%;
  color: white;
}
/*商品分类*/
.mall-category {
  margin-bottom: 15px;
  border-radius: 2px;
  background-color: #fff;
  box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
  height: 50px;
  line-height: 50px;
  /*.category-first a {
    }*/
}
.mall-category ul li {
  position: relative;
  display: inline-block;
  height: 50px;
}
.mall-category ul li a {
  padding: 0 20px;
}
.mall-category .layui-this a {
  color: #5FB878;
}
/*商品列表*/
.mall-item {
  background-color: #fff;
  border: 1px solid #F2F2F0;
  width: 100%;
  padding: 10px;
  height: auto;
  box-sizing: border-box;
  /*box-shadow: 3px 4px 3px @border-color;*/
  cursor: pointer;
}
.mall-item .p-img {
  height: 180px;
  width: auto;
}
.mall-item .p-title {
  min-height: 30px;
  width: auto;
  border-bottom: 1px solid #F2F2F0;
  border-top: 1px solid #F2F2F0;
  font-size: 14px;
  padding: 10px;
  box-sizing: border-box;
  color: grey;
}
.mall-item .p-price {
  min-height: 30px;
  font-size: 16px;
  color: orangered;
  text-align: left;
  vertical-align: middle;
  font-weight: 900;
  padding: 10px;
  box-sizing: border-box;
}
.mall-item:hover {
  z-index: 2;
  box-shadow: 1px 1px 3px gray;
}
/*商品详情*/
.mall-details {
  background-color: #fff;
  margin-top: 30px;
  padding: 10px;
}
.mall-details .mall-pic {
  border: 1px solid whitesmoke;
  width: 100%;
  height: 450px;
}
.mall-details .mall-desc {
  border: 1px solid whitesmoke;
  height: 450px;
  position: relative;
}
.mall-details .mall-desc .mall-d-title {
  padding: 20px 15px;
  color: #666;
  font: 700 16px Arial, "microsoft yahei";
  border-bottom: 1px solid whitesmoke;
  background-color: whitesmoke;
  position: relative;
}
.mall-details .mall-desc .mall-d-price {
  color: orangered;
  font-size: 20px;
  padding: 10px;
  border-bottom: 1px solid whitesmoke;
  font-weight: 800;
}
.mall-details .mall-desc .mall-d-content {
  position: relative;
  padding: 15px;
}
.mall-details .mall-desc .mall-d-btns {
  border-top: 1px solid whitesmoke;
  position: absolute;
  bottom: 10px;
  margin-left: 10px;
}