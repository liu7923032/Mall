/*扩展的图标*/
@font-face {
  font-family: 'mine-icon';
  src: url('font/iconfont.eot');
  src: url('font/iconfont.eot?#iefix') format('embedded-opentype'), url('font/iconfont.woff') format('woff'), url('font/iconfont.ttf') format('truetype'), url('font/iconfont.svg#iconfont') format('svg');
}
.mine-icon {
  font-family: "mine-icon" !important;
  font-size: 16px;
  font-style: normal;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}
.layui-bg-white {
  background-color: white;
}
/*仿制bootstrap 做的layui input-group*/
.layui-input-group {
  position: relative;
  display: table;
  border-collapse: separate;
}
.layui-input-group span {
  font-weight: 500;
  padding: 6px 12px;
  border: 1px solid #e6e6e6;
  line-height: 1;
  text-align: center;
  display: table-cell;
  background-color: #eee;
  cursor: pointer;
}
.layui-input-group input {
  width: 100%;
  line-height: 1;
  display: table-cell;
  padding: 0 10px;
  text-align: center;
  color: blue;
  font-weight: 800;
}
.layui-container {
  padding-bottom: 50px;
}